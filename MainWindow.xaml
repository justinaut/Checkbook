<Window x:Class="Checkbook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkbook"
        mc:Ignorable="d"
        Title="Checkbook" Height="440.2" Width="666" OpacityMask="Black" Loaded="Window_Loaded">
    <Grid OpacityMask="Black">
        <Label Content="Transactions" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Margin="10,2,0,0"/>
        <ListBox x:Name="lbTransactions" HorizontalAlignment="Left" Height="192" Margin="10,31,0,0" VerticalAlignment="Top" Width="333" FontSize="14" Background="Transparent" BorderBrush="Transparent" SelectionChanged="lbTransactions_SelectionChanged"/>
        <Label x:Name="lblBalance" Content="" HorizontalAlignment="Left" Margin="232,2,0,0" VerticalAlignment="Top" Width="108" FontWeight="Bold" FontSize="14" Opacity="0.8"/>
        <Label Content="Balance" HorizontalAlignment="Left" Margin="166,2,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" />
        <ListBox x:Name="lbCategories" HorizontalAlignment="Left" Height="192" Margin="348,31,0,0" VerticalAlignment="Top" Width="295" FontSize="14" Background="Transparent" BorderBrush="Transparent"/>
        <Label Content="Categories" HorizontalAlignment="Left" Margin="348,2,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <GroupBox Header="Transaction" HorizontalAlignment="Left" Height="168" Margin="10,228,0,0" VerticalAlignment="Top" Width="638"  FontWeight="Bold" FontSize="14">
            <Grid HorizontalAlignment="Left" Height="148" Margin="10,10,0,-12" VerticalAlignment="Top" Width="613">
                <Label Content="ID" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                <Label Content="Type" HorizontalAlignment="Left" Margin="315,8,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                <Label Content="Date" HorizontalAlignment="Left" Margin="125,8,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                <Label Content="Category" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="tbId" HorizontalAlignment="Left" Height="23" Margin="40,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49" IsReadOnly="True" Background="Transparent"/>
                <TextBox x:Name="tbType" HorizontalAlignment="Left" Height="23" Margin="361,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" IsReadOnly="True" Background="Transparent"/>
                <TextBox x:Name="tbDate" HorizontalAlignment="Left" Height="23" Margin="171,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" IsReadOnly="True" Background="Transparent"/>
                <TextBox x:Name="tbCategory" HorizontalAlignment="Left" Height="23" Margin="85,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True" Background="Transparent"/>
                <Label Content="Amount" HorizontalAlignment="Left" Margin="450,42,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                <Label Content="Description" HorizontalAlignment="Left" Margin="213,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.553,0.5" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="tbAmount" HorizontalAlignment="Left" Height="23" Margin="519,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84" IsReadOnly="True" Background="Transparent"/>
                <TextBox x:Name="tbDescription" HorizontalAlignment="Left" Height="23" Margin="304,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="299" IsReadOnly="True" Background="Transparent"/>
                <Label Content="Check Num" HorizontalAlignment="Left" Margin="452,8,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                <TextBox x:Name="tbCheckNum" HorizontalAlignment="Left" Height="23" Margin="543,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" IsReadOnly="True" Background="Transparent"/>
                <Label x:Name="lblAmountString" Content="" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Width="430" FontWeight="Bold" FontSize="14"/>
                <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top" Width="75" Click="btnEdit_Click"/>
            </Grid>
        </GroupBox>
        <Grid.Background>
            <ImageBrush ImageSource="Images/VesperLake.jpg" Stretch="UniformToFill" Opacity=".5"/>
        </Grid.Background>
    </Grid>
</Window>
