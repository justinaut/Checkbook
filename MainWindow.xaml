<Window x:Class="Checkbook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkbook"
        mc:Ignorable="d"
        Title="Checkbook" Height="350" Width="525" OpacityMask="Black" Loaded="Window_Loaded">
    <Grid OpacityMask="Black">
        <Label Content="Transactions" HorizontalAlignment="Left" VerticalAlignment="Top" OpacityMask="#CC000000" Background="White"/>
        <ListBox x:Name="lbTransactions" HorizontalAlignment="Left" Height="195" Margin="10,31,0,0" VerticalAlignment="Top" Width="333" OpacityMask="#7F000000" Background="#CCFFFFFF"/>
        <Label x:Name="lblBalance" Content="" HorizontalAlignment="Left" Margin="235,226,0,0" VerticalAlignment="Top" Background="#CCFFFFFF" Width="108"/>
        <Label Content="Balance" HorizontalAlignment="Left" Margin="179,226,0,0" VerticalAlignment="Top" Background="White" OpacityMask="#CC000000"/>
        <Grid.Background>
            <ImageBrush ImageSource="Images/VesperLake.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
    </Grid>
</Window>
